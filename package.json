{
  "scripts": {
    "clean": "lerna run clean",
    "build": "tsc -b",
    "dist": "lerna run dist",
    "test:unit": "jest /packages/.*/__tests__/.* --coverage",
    "prepublishOnly": "yarn clean && yarn build && yarn dist"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "cross-env": "^5.2.0",
    "lerna": "^2.11.0",
    "prettier": "^1.14.0",
    "ts-jest": "^23.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^3.0.1"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "<rootDir>/tsconfig-test.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/packages/.*/__(tests|integration)__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "collectCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
