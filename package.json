{
  "devDependencies": {
    "@types/jest": "^23.1.0",
    "cross-env": "^5.2.0",
    "lerna": "^2.11.0",
    "prettier": "^1.12.1",
    "tslint": "^5.10.0",
    "ts-jest": "^23.0.0",
    "tslint-config-prettier": "^1.12.0",
    "typescript": "^2.9.2"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/packages/.*/__(tests|integration)__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "collectCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
