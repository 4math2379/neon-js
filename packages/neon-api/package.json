{
  "name": "@cityofzion/neon-api",
  "description": "Neon-API module: High level API for neon-js",
  "version": "4.0.0-next.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CityOfZion/neon-js.git"
  },
  "keywords": [
    "neo",
    "antshares",
    "javascript",
    "libraries"
  ],
  "author": "Yak Jun Xiang <snowypowers@gmail.com> (https://github.com/snowypowers)",
  "license": "MIT",
  "main": "lib/index.js",
  "module": "src/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "tslint src/**/*.ts __tests__/**/*.ts __integration__/**/*.ts",
    "lint:fix": "tslint src/**/*.ts --fix",
    "prepublishOnly": "yarn lint && yarn build",
    "pretty": "prettier",
    "test": "jest --coverage",
    "test:unit": "jest ./__tests__/.*",
    "test:integration": "jest ./__integration__/.*",
    "clean": "rimraf ./lib ./dist"
  },
  "devDependencies": {
    "@cityofzion/neon-core": "^4.0.0-next.0",
    "@types/jest": "^23.1.0",
    "jest": "^23.1.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.0.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "axios": "^0.18.0"
  },
  "peerDependencies": {
    "@cityofzion/neon-core": "^4.0.0-next.0"
  },
  "files": [
    "lib/",
    "src/"
  ],
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__(tests|integration)__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "collectCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
